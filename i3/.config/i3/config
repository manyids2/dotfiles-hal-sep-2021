# launcher for various programs
mode "musicstuff" {
        # Music player.
        bindsym o exec "kitty -T musicterm 'ncmpcpp'"; mode "default";
        # Open note.
        bindsym n exec "python3 /home/x/.config/managers/papers.py -d notes -s /home/x/fd/sessions/transcribe"; mode "default";
        # Open paper.
        bindsym p exec "python3 /home/x/.config/managers/papers.py -d papers -s /home/x/fd/sessions/transcribe"; mode "default";
        # Diary, nvim.
        bindsym Shift+d exec "python3 /home/x/.config/managers/journal.py -d index -s /home/x/fd/sessions/transcribe"; mode "default";
        # Today.
        bindsym Shift+t exec "python3 /home/x/.config/managers/journal.py -d today -s /home/x/fd/sessions/transcribe"; mode "default";
        # Yesterday.
        bindsym Shift+y exec "python3 /home/x/.config/managers/journal.py -d yesterday -s /home/x/fd/sessions/transcribe"; mode "default";

        # Start audio server stuff
        bindsym a exec qjackctl; mode "default";
        bindsym m exec musescore; mode "default";
        bindsym t exec transcribe; mode "default";

        # record midi.
        bindsym Shift+a exec "python3 /home/x/.config/managers/record-section.py -s on"; mode "default";
        bindsym Shift+z exec "python3 /home/x/.config/managers/record-section.py -s off"; mode "default";

        # Play rostro.
        bindsym 1 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 1.avi'"; mode "default";
        bindsym 2 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 2.avi'"; mode "default";
        bindsym 3 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 3.avi'"; mode "default";
        bindsym 4 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 4.avi'"; mode "default";
        bindsym 5 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 5.avi'"; mode "default";
        bindsym 6 exec "mpv /home/x/Music/albums/'Cello Suites (Rostropovich)'/'Mstislav Rostropovich - Bach Cello Suites 6.avi'"; mode "default";
        # back to normal: Enter or Escape or $mod+r
        bindsym Escape mode "default"
}
bindsym $mod+m mode "musicstuff"

# bookmarks - search, add, parse clipboard
mode "bookmarks" {
        # save bookmark
        bindsym w exec "/home/x/fd/managers/bookmarks/bookmarks.sh"; mode "default";
        # search bookmarks
        bindsym slash exec "/home/x/fd/managers/bookmarks/search_bookmarks.sh"; mode "default";
        # back to normal: Enter or Escape or $mod+r
        bindsym Escape mode "default"
}
bindsym $mod+slash mode "bookmarks"

