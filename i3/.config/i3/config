# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Wide, tall
        bindsym d resize set 800 1440; move position 1760   0; mode "default";
        bindsym a resize set 800 1440; move position    0   0; mode "default";
        bindsym w resize set 2560 500; move position    0   0; mode "default";
        bindsym s resize set 2560 500; move position    0 970; mode "default";

        # Positions
        bindsym 7 resize set 800 800; move position    0 0; mode "default";
        bindsym 8 resize set 800 800; move position  890 0; mode "default";
        bindsym 9 resize set 800 800; move position 1760 0; mode "default";

        bindsym 4 resize set 800 800; move position    0 360; mode "default";
        bindsym 5 resize set 800 800; move position  890 360; mode "default";
        bindsym 6 resize set 800 800; move position 1760 360; mode "default";

        bindsym 1 resize set 800 800; move position    0 970; mode "default";
        bindsym 2 resize set 800 800; move position  890 970; mode "default";
        bindsym 3 resize set 800 800; move position 1760 970; mode "default";

        bindsym z floating enable; resize set 1920 1060; move position 0 20; mode "default";
        bindsym t sticky toggle; mode "default";

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "layout" {
    # split in horizontal orientation
    bindsym h split h; mode "default"

    # split in vertical orientation
    bindsym v split v; mode "default"

    # change container layout (stacked, tabbed, toggle split)
    bindsym s layout stacking; mode "default"
    bindsym w layout tabbed; mode "default"
    bindsym e layout toggle split; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+h mode "layout"

# launcher for various programs
mode "launcher" {
    # Terminal.
    bindsym Return exec "kitty"; mode "default"

    # tiny top terminal.
    bindsym semicolon exec "kitty -T topterm"; mode "default";

    # Type a few lines.
    bindsym l exec "kitty -T fewlines 'nvim'"; mode "default";
    # Start a quicknote.
    bindsym q exec "kitty -T quicknote 'nvim'"; mode "default";
    # Start a tmux session.
    bindsym o exec "kitty '/home/x/fd/managers/scripts/tmux.sh'"; mode "default";
    # Music player.
    bindsym m exec "kitty -T musicterm 'ncmpcpp'"; mode "default";
    # Music player.
    bindsym Shift+m exec "/home/x/fd/projects/coding/rofi-stuff/rofi/1080p/applets/applets/mpd.sh"; mode "default";
    # Record.
    bindsym r exec "kitty -T recordalsa '/home/x/fd/sysad/scripts/record.sh'"; mode "default";
    # File explorer.
    bindsym f exec "nautilus"; mode "default";
    # Typora.
    bindsym t exec "typora"; mode "default";
    # Clipboard.
    bindsym c exec "/home/x/fd/managers/scripts/clipboard.sh"; mode "default";
    # Choose session.
    bindsym s exec "/home/x/fd/managers/currentsession.sh"; mode "default";
    # Show the browser scratchpad window, if any.
    bindsym b [class="Google-chrome"] scratchpad show; mode "default";
    # Unicode selection.
    bindsym u exec "unipicker | xargs | xsel -ib"; mode "default";

    # Volume.
    bindsym Shift+p exec "pavucontrol"; mode "default";
    # Audio server.
    bindsym Shift+m exec "/home/x/fd/managers/audio/audio.sh"; mode "default"
    # Clock.
    bindsym Shift+c exec "/home/x/fd/managers/scripts/launch_clock.sh"; mode "default";

    # Diary, nvim.
    bindsym d exec "python3 /home/x/.config/managers/journal.py -s /home/x/.diary"; mode "default";
    # Today.
    bindsym Shift+t exec "python3 /home/x/.config/managers/journal.py -d today -s /home/x/.diary"; mode "default";
    # Yesterday.
    bindsym Shift+y exec "python3 /home/x/.config/managers/journal.py -d yesterday -s /home/x/.diary"; mode "default";

    # Anki.
    bindsym Shift+a exec "/home/x/fd/managers/scripts/launch_anki.sh"; mode "default";

    # Drawing.
    bindsym Shift+f exec "/home/x/fd/sessions/drawing/tools/random-film-grab.sh"; mode "default";

    # Reaper.
    bindsym Shift+r exec "wine '/home/x/.wine/drive_c/Program Files/REAPER (x64)'/reaper.exe"; mode "default";

    # Browser.
    bindsym Shift+b exec "google-chrome-stable"; mode "default";
    bindsym Shift+i exec "google-chrome-stable --incognito"; mode "default";

    # back to normal: Enter or Escape or $mod+r
    bindsym Escape mode "default"
}
bindsym $mod+Return mode "launcher"

